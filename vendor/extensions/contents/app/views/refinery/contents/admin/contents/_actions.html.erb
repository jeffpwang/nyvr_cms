<ul>
  <% if ::Refinery::Contents::Admin::ContentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.contents_admin_contents_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_contents_admin_content_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Contents::Admin::ContentsController.sortable? && ::Refinery::Contents::Content.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.contents_admin_contents_path,
                     t('.reorder', what:  "Contents"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.contents_admin_contents_path,
                      t('.reorder_done', what: "Contents"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
