<% content_for :body_content_title do %>
  <%= @content.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @content.title %>
    </p>
  </section>
  <section>
    <h1>Thumbnail</h1>
    <p>
      <%= image_fu @content.thumbnail, nil %>
    </p>
  </section>
  <section>
    <h1>File</h1>
    <p>
      <% if @content.file.present? %>
        <%= link_to 'file', @content.file.url %>
      <% else %>
        file
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="contents">
      <% @contents.each do |content| %>
        <li>
          <%= link_to content.title, refinery.contents_content_path(content) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
